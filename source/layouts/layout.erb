<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <link href='http://fonts.googleapis.com/css?family=Bree+Serif' rel='stylesheet' type='text/css'>
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "The Middleman" %></title>
    
    <%= stylesheet_link_tag "main", "bootstrap.min", "bootstrap-responsive.min", "normalize" %>
    <%= javascript_include_tag  "jquery-1.9.1.min", "bootstrap.min", "modernizr-2.6.2-respond-1.1.0.min"   %>
    <script>
    $(function(){
      $("#slides").slidesjs({
        width: 942,
        height: 355
      });
    });
  </script>
  </head>
  
  <body class="<%= page_classes %>">
    <%= yield %>

  </body>
</html>